#ifndef SRC_CAR_H_
#define SRC_CAR_H_

#include "xil_types.h"

class Car {

public:
	Car();
	virtual ~Car();
private:
	uint16_t pos_x;
	uint16_t pos_y;
	uint16_t desired_x;
	uint16_t desired_y; //used for object when tile transition
	uint8_t speed_x;
	uint8_t tile_speed; //used for object when tile transition
	static uint8_t obj_index;
};

#endif /* SRC_CAR_H_ */

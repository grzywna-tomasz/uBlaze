#ifndef SRC_CAR_H_
#define SRC_CAR_H_

#include "xil_types.h"
//#include "Obstacle.h"

class Car// : public Obstacle
{
	public:

	enum Direction {Left, Right, None};

	//TODO Find good spot for spawning objects
	Car(uint16_t pos_x = 0, uint16_t pos_y = 0);

	uint16_t getHeight() const;
	void setHeight(uint16_t height);

	uint8_t getObjSpeed() const;
	void setObjSpeed(uint8_t objSpeed);

	uint16_t getPosX() const;
	void setPosX(uint16_t posX);

	uint16_t getPosY() const;
	void setPosY(uint16_t posY);

	uint16_t getWidth() const;
	void setWidth(uint16_t width);

	private:

	uint16_t pos_x;
	uint16_t pos_y;
	uint16_t width;
	uint16_t height;

	enum Direction direction;

	uint8_t obj_speed;
};

#endif /* SRC_CAR_H_ */
